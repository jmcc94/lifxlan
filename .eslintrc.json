{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["playground"],
    "rules": {
        "no-plusplus": "off",
        "import/extensions": ["error", "always"],
        "import/prefer-default-export": "off",
        "no-bitwise": "off",
        "no-param-reassign": "off",
        "no-nested-ternary": "off"
    }
}
